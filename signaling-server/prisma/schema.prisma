generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Streamer {
  email String @unique
  id String @id @default(uuid())
  firstname String
  lastname String
  username String 
  password String  
  salt String

  @@map("streamers")
  Stream Stream[]
  Comment Comment[]
}

model Stream {
  id String @id @default(uuid())
  room String
  title String
  description String
  streamer Streamer @relation(fields: [streamerId], references: [id])
  streamerId String

  @@map("streams")
}

model Comment {
  id String @id @default(uuid())
  content String
  createdAt DateTime @default(now())
  streamer Streamer @relation(fields: [authorId], references: [id])
  authorId String

  @@map("comments")
}